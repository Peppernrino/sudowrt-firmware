config interface 'loopback'
	option ifname 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config interface 'lan'
  option ifname 'eth0'
	option proto 'static'
	option ipaddr '172.22.0.2'
	option netmask '255.255.255.0'

config interface 'lan2'
  option ifname 'eth1'
	option proto 'static'
	option ipaddr '172.22.1.2'
	option netmask '255.255.255.0'


